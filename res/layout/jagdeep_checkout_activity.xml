<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.assign2.jagdeep21.Checkout" >

    <TextView
        android:id="@+id/txtPizzaType"
        style="@style/text_view4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtPizzaSize"
        style="@style/text_view4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPizzaType" />

    <TextView
        android:id="@+id/txtPizzaTopping"
        style="@style/text_view4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPizzaSize" />

    <TextView
        android:id="@+id/txtName"
        style="@style/text_view4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPizzaTopping" />

    <TextView
        android:id="@+id/txtEmail"
        style="@style/text_view4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName" />

    <TextView
        android:id="@+id/txtAddress"
        style="@style/text_view4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail" />

    <TextView
        android:id="@+id/txtCity"
        style="@style/text_view4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAddress" />

    <TextView
        android:id="@+id/txtPhone"
        style="@style/text_view4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCity" />

    <TextView
        android:id="@+id/txtCredit"
        style="@style/text_view4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPhone" />

    <Button
        android:id="@+id/bCheckout"
        style="@style/button_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCredit"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonback"
        android:onClick="checkout"
        android:text="@string/title_activity_checkout" />

</RelativeLayout>